<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.libo.lexue.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_ulexue"/>
        <TextView
            android:id="@+id/company_name"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="18px"
            android:textAlignment="center"
            android:text="U乐学"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal" />

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_username"
            android:drawableLeft="@mipmap/icon_user"
            android:drawablePadding="10dp"
            style="@style/edit_text"
            android:hint="用户名"/>

        <EditText
            android:id="@+id/et_password"
            android:drawableLeft="@mipmap/icon_lock"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            style="@style/edit_text"
            android:hint="密码"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/scan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="获取站点"
            android:textColor="@color/btn_bkgrd_black_new"
            android:drawableLeft="@mipmap/icon_saoma"

            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/rember_btn"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="记住密码"
            android:textColor="@color/btn_bkgrd_black_new"
            android:drawableLeft="@drawable/drawble_btn"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/auto_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="记住密码"
            android:textColor="@color/btn_bkgrd_black_new"
            android:drawableLeft="@drawable/drawble_btn"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@color/red"/>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:drawableLeft="@mipmap/icon_cog"
        android:drawablePadding="15dp"
        android:textColor="@color/btn_bkgrd_black_new"
        android:layout_marginRight="20dp"
        android:text="进入后台管理"/>
</LinearLayout>
